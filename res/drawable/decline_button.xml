<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
	                android:startColor="@color/red"
	                android:endColor="@color/red2"
	                android:angle="270" />
            <stroke
	                android:width="1dp"
	                android:color="@color/grey" />
            <corners
	                android:radius="3dp" />
            <padding
	                android:left="10dp"
	                android:top="10dp"
	                android:right="10dp"
	                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
	                android:endColor="@color/light_red"
	                android:startColor="@color/light_red2"
	                android:angle="270" />
            <stroke
	                android:width="1dp"
	                android:color="@color/grey" />
            <corners
	                android:radius="3dp" />
            <padding
	                android:left="10dp"
	                android:top="10dp"
	                android:right="10dp"
	                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
	                android:endColor="@color/red"
	                android:startColor="@color/red2"
	                android:angle="270" />
            <stroke
	                android:width="1dp"
	                android:color="@color/grey" />
            <corners
	                android:radius="3dp" />
            <padding
	                android:left="10dp"
	                android:top="10dp"
	                android:right="10dp"
	                android:bottom="10dp" />
        </shape>
    </item>
</selector>